<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images_1"
    android:orientation="vertical"
    tools:context=".activities.MainPageApp">

    <TextView
        android:id="@+id/nameview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/icback"
        android:padding="5dp"
        android:text="  Wecome     "
        android:textColor="#FFFFFF"
        android:textSize="21sp"></TextView>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@drawable/iconback"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/detailsback">

                <ImageView
                    android:id="@+id/womenicon"
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/women_icon"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/detailsback">

                <ImageView
                    android:id="@+id/fireicon"
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/detailsback"
                    android:src="@drawable/fire_icon"></ImageView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/detailsback">

                <ImageView
                    android:id="@+id/accidenticon"
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/detailsback"
                    android:src="@drawable/accident"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/detailsback">

                <ImageView
                    android:id="@+id/disastericon"
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/detailsback"
                    android:src="@drawable/disaster"></ImageView>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/theftview"
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/detailsback"
            android:src="@drawable/thefticon10"></ImageView>


    </LinearLayout>

</LinearLayout>