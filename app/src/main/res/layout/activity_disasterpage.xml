<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0066FF"
    tools:context=".activities.Disasterpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/detailsback">

            <ImageView
                android:id="@+id/accident1"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/disaster"></ImageView>
        </LinearLayout>

        <ScrollView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/detailsback">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Instructions To Use : \n\n\n \t 1.\tIncase of any Natural Hazard like Floods, Earthquake, Cyclone, etc,,,.\n\n\t 2.  Click on the Natural hazard Help Button"
                    android:textColor="#000000"
                    android:textSize="12sp"></TextView>


                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/unnamed"></ImageView>

                <TextView
                    android:id="@+id/disastertrigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:layout_marginBottom="20dp"
                    android:background="#006600"
                    android:padding="10dp"
                    android:text="Natural Hazard Help"
                    android:textSize="15sp"></TextView>
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/detailsback">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#0066FF"
                    android:padding="10dp"
                    android:text="Natural Calamity Safety Tips"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/disasterlinkview"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/disasterlink"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText"></TextView>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</ScrollView>